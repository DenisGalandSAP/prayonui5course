<core:FragmentDefinition xmlns:core='sap.ui.core'
    xmlns="sap.m">
    <HBox id="hbox0"
        width="100%"
        alignItems="Center"
        renderType="Bare">
        <Button xmlns="sap.m"
            enabled="{/enableForm}"
            id="button1"
            text="{/inputValue}"
            icon="sap-icon://save"
            class="sapUiResponsiveMargin"
            press=".onPress"/>
        <Input id="input0"
            enabled="{/enableForm}"
            value="{/inputValue}"
            valueLiveUpdate="true"
            class="sapUiResponsiveMargin"
            width="70%"
            type="Text"/>
        <Switch type="Default"
            change=".onChange"/>
    </HBox>
</core:FragmentDefinition>